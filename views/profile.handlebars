<section class="container container-fluid mt-5">
  <div class="row mt-4">
    <div class="col-md-12 recipe-list">
      <h3>Your Recipes:</h3>
      {{#each recipes as | recipe|}}
      <div class="row mb-2 recipe-list-card">
        <div class="col-md-10">
          <h4><a href="/recipe/{{recipe.id}}">{{recipe.recipe_name}}</a></h4>
        </div>
        <div class="col-md-2">
          <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="form-container hidden">
    <h3>Create a New Recipe:</h3>
    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe_name">Recipe name:</label>
        <input class="form-input" type="text" id="recipe_name" name="recipe_name" />
      </div>
      <div class="form-group">
        <label for="totalTime">Total Cooking Time:</label>
        <input class="form-input" type="number" id="totalTime" name="totalTime" />
      </div>
      <div class="form-group">
        <label for="ingredients">Ingredients:</label>
        <textarea rows="4" class="form-input" id="ingredients" name="ingredients"></textarea>
      </div>
      <div class="form-group">
        <label for="steps">Steps:</label>
        <textarea rows="4" class="form-input" id="steps" name="steps"></textarea>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea rows="4" class="form-input" id="description" name="description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <button type="button" id="cancel-form" class="btn btn-secondary">Cancel</button>
      </div>
    </form>
  </div>

  <input type="button" value="+ New Recipe"  class=" btn btn-info btn-new-recipe" id="newRecipeBtn" />


</section>

<script src="./js/profile.js"></script>
